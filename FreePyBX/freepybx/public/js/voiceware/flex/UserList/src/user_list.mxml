<broker:UserList xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:broker="com.vwci.broker.*"
			   width="100%" height="100%">
	<fx:Style source="user_list.css"/>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.DataGrid;
			import mx.events.DragEvent;
			import mx.managers.DragManager;
			import mx.utils.StringUtil;
			import com.vwci.broker.*			
			import spark.layouts.supportClasses.DropLocation;
			
			protected function lst_labelFunc(data:Object):String {
				return StringUtil.substitute(" {0}", data.name);
			}					
		]]>
	</fx:Script>	
	
	<s:List id="lstUsers" borderVisible="false" labelFunction="lst_labelFunc"
			dataProvider="{users}" height="100%" width="100%" 
			itemRenderer="com.vwci.broker.skins.UserListRen">
		<s:layout>
			<s:VerticalLayout gap="0" horizontalAlign="justify"/>
		</s:layout>
	</s:List>
</broker:UserList>
